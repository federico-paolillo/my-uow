<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.1</TargetFramework>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Authors>federico-paolillo</Authors>
        <Company>federico-paolillo</Company>
        <Product>FP.UoW</Product>
        <Description>Implementation of an Unit of Work flexible enough to be useful</Description>
        <NeutralLanguage>en-US</NeutralLanguage>
        <Copyright>Â© 2020 federico-paolillo</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <Title>Unit Of Work</Title>
        <PackageProjectUrl>https://github.com/federico-paolillo/my-uow</PackageProjectUrl>
        <RepositoryUrl>https://github.com/federico-paolillo/my-uow.git</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageTags>uow, unitofwork, pattern</PackageTags>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>DEBUG</DefineConstants>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <CodeAnalysisRuleSet>../../UoW.ruleset</CodeAnalysisRuleSet>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <CodeAnalysisRuleSet>../../UoW.ruleset</CodeAnalysisRuleSet>
        <DebugSymbols>true</DebugSymbols>
        <DebugType>full</DebugType>
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
        <Deterministic>true</Deterministic>
        <Optimize>true</Optimize>
    </PropertyGroup>

    <ItemGroup>

        <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>

        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All"/>

    </ItemGroup>

</Project>
